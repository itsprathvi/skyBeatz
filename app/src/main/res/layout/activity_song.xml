<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/front"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".MainActivity">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rounded_corner"
        app:itemTextColor="@drawable/selector"
        app:itemRippleColor="@color/white"
        android:layout_alignParentBottom="true"
        app:itemIconTint="#cfcfcf"
        app:menu="@menu/menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="658dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_button"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/material_on_surface_stroke"
                android:text="@string/go_back"
                android:layout_marginLeft="15dp"
                android:textColor="#ACAAAA"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/artist_text"
                android:layout_width="339dp"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="26dp"
                android:text="Song by Arjun Janya"
                android:layout_marginLeft="80dp"
                android:textColor="#ACAAAA"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/song_img"
            android:layout_width="match_parent"
            android:layout_height="408dp"
            android:padding="35dp"
            app:srcCompat="@drawable/song" />

        <TextView
            android:id="@+id/songName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:padding="10dp"
            android:textColor="#ddd"
            android:layout_gravity="center"
            android:gravity="center"
            android:marqueeRepeatLimit="@integer/material_motion_duration_long_1"
            android:maxLines="1"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:backgroundTint="#F6C01E"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textColor="#575454"
                android:text="Play" />

            <Button
                android:id="@+id/pause"
                android:layout_width="wrap_content"
                android:backgroundTint="#FFC107"
                android:layout_height="78dp"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textColor="#575454"
                android:text="Pause" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>